{
  "manifest_version": 3,
  "name": "[DEV] Tab Mixer",
  "version": "1.3.0",
  "description": "A Chrome extension for efficient management of multiple windows and tabs.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabGroups",
    "windows",
    "storage",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "background": {
    "service_worker": "_kamox_background.js"
  }
}